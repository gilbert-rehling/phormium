{
    "name": "phormium/phormium",
    "type": "library",
    "description": "A minimalist ORM for PHP.",
    "keywords": ["database","orm","php","mapping"],
    "homepage": "https://github.com/ihabunek/phormium",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Habunek",
            "email": "ivan.habunek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "evenement/evenement": "^2.0",
        "pimple/pimple": "^3.0",
        "symfony/config": "~2.6.0",
        "symfony/yaml": "~2.6.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "mockery/mockery": "@stable"
    },
    "suggest": {
        "apache/log4php": "Required for query logging"
    },
    "autoload": {
        "psr-0": {"Phormium": "src/"}
    },
    "autoload-dev": {
        "psr-0": {"Phormium\\Tests": "tests/"}
    },
    "support": {
        "issues": "https://github.com/ihabunek/phormium/issues"
    }
}
